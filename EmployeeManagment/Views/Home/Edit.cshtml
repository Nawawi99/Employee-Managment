@model Employee

@{
    ViewBag.Title = "Edit";
}

<form asp-action="Edit" asp-controller="Home" method="post">
    <div class="m-2">
        <label asp-for="@Model.Name" class="form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control" placeholder="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="m-2">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="@Model.Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="m-2">
        <label asp-for="Department" class="form-label"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
            <option selected hidden value="">@Model.Department</option>
        </select>
        <span asp-validation-for="Department"></span>
    </div>
    <button class="btn btn-primary m-2" type="submit">Edit</button>
</form>
