@model IEnumerable<Employee>

@{
	ViewBag.Title = "Home Page";
}

<div class="card-group text-center">
    @foreach (var employee in Model)
    {
    <div class="card m-1" style="width: 300px;">
        <img src="/images/bug.jpg" class="card-img-top" alt="...">
        <div class="card-body text-center">
            <h5 class="card-title">@employee.Name</h5>
            <h6 class="card-text">@employee.Department</h6>
            <p class="card-text">@employee.Email</p>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-primary">Delete</a>
        </div>
    </div>
    }
</div>

