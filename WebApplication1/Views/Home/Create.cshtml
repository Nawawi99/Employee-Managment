@model Employee

@{
    ViewBag.Title = "Create an Employee";
}

<form action="/Home/Create" method="post">
    <div class="m-2">
        <label asp-for="@Model.Name" class="form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control"/>
    </div>
    <div class="m-2">
        <label asp-for="@Model.Email" class="form-label">Email</label>
        <input asp-for="@Model.Email" class="form-control"/>
    </div>
    <div class="m-2">
        <label asp-for="Department" class="form-label"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control"></select>
    </div>
    <div class="m-2">
        <button type="submit" class="btn btn-dark">Create</button>
    </div>
</form>
