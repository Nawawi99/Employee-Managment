<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*Development env local bootstrap CSS*@
    <environment include="Development">
        <link 
            rel="stylesheet" 
            href="~/lib/bootstrap/css/bootstrap.css"/>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    </environment>
    @*other env/s CDN bootstrap CSS **If down uses local bootstrap*@
    <environment exclude="Development">
        <link 
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLdddd" 
            crossorigin="anonymous"
            asp-fallback-href="~/lib/bootstrap/css/bootstrap.css"
            asp-asp-fallback-test-class=""
            asp-fallback-test-class="visually-hidden"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute"
            asp-suppress-fallback-integrity="true"/>
    </environment>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><strong>CRUD</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link">List</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Create" asp-controller="Home" class="nav-link">Create</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
    </div>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
